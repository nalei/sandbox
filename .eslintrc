{
  "extends": "eslint:recommended",
  "rules": {
      "indent": ["error", 2],
      "linebreak-style": ["error", "windows"],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],

      "comma-dangle": ["error", "never"],
      "no-cond-assign": ["error", "always"],

      "no-console": "off"
  },
  "env": {
    "es6": true,
    "node": true
  }
}